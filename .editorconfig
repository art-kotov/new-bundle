root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 120
tab_width = 2
trim_trailing_whitespace = true

[{*.cjs,*.js, *.jsx}]
indent_size = 2
tab_width = 2

[{*.sht,*.htm,*.html,*.shtm,*.shtml,*.ng}]
indent_size = 2
tab_width = 2
